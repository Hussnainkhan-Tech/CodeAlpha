stock_prices = {
    "AAPL": 180,
    "TSLA": 250,
    "GOOGL": 135,
    "MSFT": 310
}
portfolio = {}
total_investment = 0
print("Available stocks:", ", ".join(stock_prices.keys()))
while True:
    stock = input("\nEnter stock name (or 'done' to finish): ").upper()
    if stock == "DONE":
        break
    if stock not in stock_prices:
        print("Stock not found. Please choose from the available stocks.")
        continue
    try:
        quantity = int(input(f"Enter quantity of {stock}: "))
    except ValueError:
        print("Please enter a valid number.")
        continue
    value = stock_prices[stock] * quantity
    portfolio[stock] = (quantity, value)
    total_investment += value
print("\nPortfolio Summary")
for stock, (qty, val) in portfolio.items():
    print(f"{stock}: {qty} shares → ${val}")
print(f"\n Total Investment Value: ${total_investment}")
save = input("\nSave result to file? (y/n): ").lower()
if save == "y":
    filename = input("Enter filename (portfolio.txt or portfolio.csv): ")
    with open(filename, "w") as file:
        if filename.endswith(".csv"):
            file.write("Stock,Quantity,Value\n")
            for stock, (qty, val) in portfolio.items():
                file.write(f"{stock},{qty},{val}\n")
            file.write(f"Total,,{total_investment}\n")
        else:
            for stock, (qty, val) in portfolio.items():
                file.write(f"{stock}: {qty} shares → ${val}\n")
            file.write(f"\nTotal Investment Value: ${total_investment}")
    print(" Portfolio saved successfully.")
